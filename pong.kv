<PongBall>:
    size: 40, 40
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: 'tennis_ball.png'
            angle_start: 0
            angle_end: 360

<PongPaddle>:
    size: 50, 130
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'racquet.png'

<PongGame>:
    ball: pong_ball
    player1: player1
    player2: player2
    player1_score_label: player1_score_label
    player2_score_label: player2_score_label

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.width, self.height
            #source: 'court1.png'
            #source: 'court2.jpg'
            source: 'court3.jpeg'

    canvas.after:
        Rectangle:
            pos: self.width/5.35, self.height/1.1
            size: self.width/4, self.height/11
            source: "label_background.png"
    
        Rectangle:
            pos: self.width/1.75, self.height/1.1
            size: self.width/4, self.height/11
            source: "label_background.png"
            

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player1
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player2
        x: root.width - self.width
        center_y: root.center_y

    Label:
        id: player1_score_label
        font_size: 20
        font_family: "FlatlineSerif-Bold.ttf"
        pos: root.width/2 - 2.5*self.width, root.height - self.height /1.25
        text: "Player: 0"
        color: 0,0,0,1

    Image:
        source: "vs_image.png"
        pos: root.width/2 - self.width/2, root.height - self.height/1
        size_hint: None, None
        size: root.width/12, root.height/12

    Label:
        id: player2_score_label
        font_size: 20
        font_family: "FlatlineSerif-Bold.ttf"
        pos: root.width/2 + 1.7*self.width, root.height - self.height/1.25
        text: "Computer: 0"
        color: 0,0,0,1

    
    
